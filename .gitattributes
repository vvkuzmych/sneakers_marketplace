# Auto detect text files and perform LF normalization
* text=auto

# Go files
*.go text eol=lf

# SQL files
*.sql text eol=lf

# Protobuf files
*.proto text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# JSON
*.json text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Documentation
*.txt text eol=lf
*.adoc text eol=lf
LICENSE text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
